# DEL TEST
curl --request DELETE \
  --url http://10.1.7.84:5002/api/obfn

# PUT TEST
curl --request PUT \
  --url http://10.1.7.84:5002/api/obfn \
  --header 'content-type: application/json' \
  --data '{
	"obfn-pool": [
		{
			"beam-enable": false,
			"beam-id": 3,
			"width": 99,
			"x-offset-angle": 98,
			"y-offset-angle": 97
		}
	],
	"wavelength-reference-pool": [
		{
			"wavelength-id": 3,
			"central-frequency": {
				"central-frequency": 999,
				"frequency-constraint": {
					"adjustment-granularity": "G_25GHZ",
					"grid-type": "DWDM"
				}
			}
		}
	]
}'
